@@ -1162,11 +1162,12 @@ public abstract class World implements IBlockAccess {
             int cx = chunkx << 4;
             for ( int chunkz = ( i1 >> 4 ); chunkz <= ( ( j1 - 1 ) >> 4 ); chunkz++ )
             {
-                if ( !this.isChunkLoaded( chunkx, chunkz, true ) )
+                Chunk chunk = this.getChunkIfLoaded( chunkx, chunkz );
