+package net.techcable.tacospigot;
+
+import net.minecraft.server.AxisAlignedBB;
+import net.minecraft.server.Block;
+import net.minecraft.server.BlockChest;
+import net.minecraft.server.BlockHopper;
+import net.minecraft.server.BlockPosition;
+import net.minecraft.server.Blocks;
+import net.minecraft.server.Entity;
+import net.minecraft.server.EntityItem;
+import net.minecraft.server.IHopper;
+import net.minecraft.server.IInventory;
+import net.minecraft.server.TileEntity;
+import net.minecraft.server.TileEntityHopper;
+import net.minecraft.server.Vec3D;
+import net.minecraft.server.World;
+import net.techcable.tacospigot.utils.BlockHelper;
+import net.techcable.tacospigot.utils.BlockHelper.AdjacentBlockSet;
+
+public class HopperHelper {
+    public static boolean acceptItem(Entity entity, IInventory inventory) {
+        if (!entity.getWorld().tacoSpigotConfig.isHopperPushBased) return false;
+        TileEntityHopper hopper = getHopper(entity.getWorld(), entity);
+        if (hopper == null) return false;
+        if (!canAcceptItems(hopper)) return false;
+        return TileEntityHopper.acceptItem(hopper, inventory);
+    }
+
+    public static boolean acceptItemEntity(EntityItem entity) {
+        if (!entity.getWorld().tacoSpigotConfig.isHopperPushBased) return false;
+        if (!entity.isAlive()) return false;
+        TileEntityHopper hopper = getHopper(entity.getWorld(), entity);
+        if (!canAcceptItems(hopper)) return false;
+        return TileEntityHopper.a(hopper, entity);
+    }
+
+    private static boolean canAcceptItems(TileEntityHopper hopper) {
+        if (hopper == null) return false; // A null hopper can't accept items
+        return !hopper.n() && !hopper.isFull() && BlockHopper.f(hopper.u());
+    }
+
+    // Finding the acceptors
+
+
+    private static TileEntityHopper getHopper(World world, Entity entity) {
+        for (BlockPosition adjacentPos : new AdjacentBlockSet(new BlockPosition(entity), 1)) {
+            TileEntityHopper hopper = getHopper(world, adjacentPos);
+            if (hopper == null) continue; // Avoid playing with the bounding boxes, if at all possible
+            /**
+             * We add one to getY(), just like {@link TileEntityHopper#b(IHopper)}
+             */
+            AxisAlignedBB hopperBoundingBox = getHopperLookupBoundingBox(adjacentPos.getX(), adjacentPos.getY() + 1, adjacentPos.getZ());
+            if (!hopperBoundingBox.b(entity.getBoundingBox())) { // AxisAlignedBB.b(AxisAlignedBB) -> isIntersect()
+                return hopper;
+            }
+        }
+        return null;
+    }
+
+    /**
+     * Get the hopper bounding box as caluclated in {@link TileEntityHopper#b(World, double, double, double)} )}
+     */
+    public static AxisAlignedBB getHopperLookupBoundingBox(double x, double y, double z) {
+        return new AxisAlignedBB(x - 0.5D, y - 0.5D, z - 0.5D, x + 0.5D, y + 0.5D, z + 0.5D);
+    }
+
+    public static TileEntityHopper getHopper(World world, BlockPosition pos) {
+        TileEntity tileEntity = world.getTileEntity(pos);
+        if (tileEntity instanceof TileEntityHopper) {
+            return (TileEntityHopper) tileEntity;
+        }
+        return null;
+    }
+
+    public static IInventory getInventory(World world, BlockPosition position) {
+        Block block = world.getType(position).getBlock();
+        if (block instanceof BlockChest) {
+            return ((BlockChest) block).f(world, position);
+        }
+        if (block.isTileEntity()) {
+            TileEntity tile = world.getTileEntity(position);
+            if (tile instanceof IInventory) return (IInventory) tile;
+        }
+        return null;
+    }
+
+}
